<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AbackgroundColor"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- AppBar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/AbackgroundColor">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Back"
                android:padding="8dp"
                app:tint="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rezepte hinzufügen"
                android:textColor="@color/AcardTextColor"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rezept Titel"
            android:textColor="@color/AcardTextColor"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/inputRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rezept Titel"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:textColor="@color/AcardTextColor"
            android:textColorHint="@android:color/darker_gray" />

        <!-- Image Picker -->
        <LinearLayout
            android:id="@+id/buttonUploadImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@drawable/dashed_line_background"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="Upload Image"
                app:tint="@color/AcardTextColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bild hochladen"
                android:textColor="@color/AcardTextColor"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beschreibung"
            android:textColor="@color/AcardTextColor"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Beschreibung"
            android:inputType="textMultiLine"
            android:lines="4"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/AcardTextColor"
            android:textColorHint="@android:color/darker_gray" />

        <!-- Ingredients -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zutaten"
            android:textColor="@color/AcardTextColor"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ingredientsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/inputNewIngredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zutaten hinzufügen"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/AcardTextColor"
            android:textColorHint="@android:color/darker_gray" />

        <!-- Instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zubereitung"
            android:textColor="@color/AcardTextColor"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/instructionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/inputNewInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Schritt hinzufügen"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/AcardTextColor"
            android:textColorHint="@android:color/darker_gray" />

        <!-- Servings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Portionen"
            android:textColor="@color/AcardTextColor"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/inputServings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Portionen"
            android:inputType="number"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/AcardTextColor"
            android:textColorHint="@android:color/darker_gray" />

        <!-- Prep Time -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zubereitungszeit"
            android:textColor="@color/AcardTextColor"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/inputPrepHours"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Stunden"
                android:inputType="number"
                android:background="@drawable/edit_text_background"
                android:padding="8dp"
                android:textColor="@color/AcardTextColor"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/inputPrepMinutes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Minuten"
                android:inputType="number"
                android:background="@drawable/edit_text_background"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/AcardTextColor"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Notes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textColor="@color/AcardTextColor"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/inputNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notizen (Optional)"
            android:inputType="textMultiLine"
            android:lines="3"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/AcardTextColor"
            android:textColorHint="@android:color/darker_gray" />

        <!-- Add Recipe Button -->
        <Button
            android:id="@+id/buttonAddRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rezept hinzufügen"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/AprimaryColor"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>